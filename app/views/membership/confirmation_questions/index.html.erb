<div class="flex flex-col min-h-screen w-full">
  <%= render "shared/header" %>
  <main class="flex-grow flex bg-white dark:bg-gray-900">
    <%= render "shared/sidebar" %>
    <div class="container flex-grow py-12 px-4 mx-auto">
      <div class="rounded-lg border bg-card text-card-foreground shadow-sm" data-v0-t="card">
        <div class="flex flex-col space-y-1.5 p-6">
          <h2 class="text-2xl font-bold">
            <%= @topic.name %>
          </h2>
        </div>
        <div class="p-6">
          <%= form_with url: membership_confirmation_answers_bulk_update_path, method: :post, class: "space-y-4" do |form| %>
            <% @confirmation_questions.each_with_index do |q, index| %>
              <div>
                <label class="block text-gray-700">Q <%= index + 1 %> <%= q.question %></label>
                <%= text_area_tag "questions[#{q.id}]", @confirmation_answers_hash[q.id].answer, rows: 3, class: "form-textarea mt-1 block w-full" %>
              </div>
            <% end %>
            <div class="flex space-x-4">
              <%= form.submit "提出", class: "btn btn-active btn-accent" %>
              <button class="btn btn-active">
                下書き保存
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
  <footer class="py-12 bg-gray-100 dark:bg-gray-800">
    <div class="container px-4 mx-auto">
      <div class="flex justify-between items-center">
        <div>
          <a class="text-2xl font-bold" href="#">
            エンジニア進化塾
          </a>
        </div>
        <div class="space-x-4">
          <a class="text-gray-600 dark:text-gray-300" href="#">
            About
          </a>
          <a class="text-gray-600 dark:text-gray-300" href="#">
            問い合わせ
          </a>
        </div>
      </div>
    </div>
  </footer>
</div>
