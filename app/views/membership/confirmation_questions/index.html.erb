<div class="flex flex-col min-h-screen w-full">
  <%= render "shared/header" %>
  <main class="flex-grow flex bg-white dark:bg-gray-900">
    <%= render "shared/sidebar" %>
    <div class="container flex-grow py-12 px-4 mx-auto">
      <div class="rounded-lg border bg-card text-card-foreground shadow-sm" data-v0-t="card">
        <div class="flex flex-col space-y-1.5 p-6">
          <h2 class="text-2xl font-bold">Verification Quiz</h2>
        </div>
        <div class="p-6">
          <form class="space-y-4">
            <div>
              <label class="block text-gray-700">Question 1</label>
              <textarea
                class="form-textarea mt-1 block w-full"
                rows="3"
                placeholder="Enter your answer here. Use markup notation for formatting. To insert an image, provide the image URL."
              ></textarea>
            </div>
            <div>
              <label class="block text-gray-700">Question 2</label>
              <textarea
                class="form-textarea mt-1 block w-full"
                rows="3"
                placeholder="Enter your answer here. Use markup notation for formatting. To insert an image, provide the image URL."
              ></textarea>
            </div>
            <div>
              <label class="block text-gray-700">Question 3</label>
              <textarea
                class="form-textarea mt-1 block w-full"
                rows="3"
                placeholder="Enter your answer here. Use markup notation for formatting. To insert an image, provide the image URL."
              ></textarea>
            </div>
            <div class="flex space-x-4">
              <button class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 h-10 px-4 py-2">
                Submit Answers
              </button>
              <button class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-secondary text-secondary-foreground hover:bg-secondary/80 h-10 px-4 py-2">
                Save Draft
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>
  <footer class="py-12 bg-gray-100 dark:bg-gray-800">
    <div class="container px-4 mx-auto">
      <div class="flex justify-between items-center">
        <div>
          <a class="text-2xl font-bold" href="#">
            Engineering Learning Portal
          </a>
        </div>
        <div class="space-x-4">
          <a class="text-gray-600 dark:text-gray-300" href="#">
            About
          </a>
          <a class="text-gray-600 dark:text-gray-300" href="#">
            Contact
          </a>
        </div>
      </div>
    </div>
  </footer>
</div>
